{
  "addInId": "CleanVersionOnSave2",

  "autoRunOnStartup": false, 

  "versionControl": {
    "versionFile": "version.py",
    "versionPattern": "\\d+\\.\\d+\\.\\d+",  
    "defaultIncrement": "patch"
  },

  "autoRename": {
    "enabled": true,
    "historyFile": "rename_history.json"
  },

  "notifications": {
    "enabled": true,
    "showSuccess": true,
    "showError": true
  },

  "logging": {
    "level": "INFO",
    "logFile": "logs/cleanversion.log"
  }
}
